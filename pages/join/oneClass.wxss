/* pages/join/oneClass.wxss */
@import "../common/price.wxss";
@import "../common/classTemp.wxss";

page, .page{
  background-color: #eee;
}

.banner{
  width: 100%;
  height: 150px;
}

.address{
  display: block;
  padding-left: 20px;
}
.title{
  padding-left: 20px;
}
.show-classId{
  float: right;
  padding-right: 10px;
}

.address{
  font-size: 1em;
}

.weui-media-box__hd_in-appmsg{
  width: 120px;
  height: 120px;
}

.weui-media-box__desc{
  font-size: 0.9em;
  line-height: 2;
}

.red-font{
  color: red;
}

.left{
  width: 50%;
}
.right{
  margin-left: 20%;
}

.join-class{
  background-color: #F3434B;
  color: white;
}
.default-btn{
  background-color: #D2D2D2;
}

.home-logo{
  width: 25px;
  height: 25px;
}

.home-text{
  font-size: 1.1em;
  /* 以下是居中 */
  position:absolute;
  top:45%;
  transform:translate(0, -50%);

}

.userinfo-avatar-local {
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  border-radius: 50%;
}

.userinfo-nickname-local {
  color: #aaa;
  font-size: 0.8em;
  display:block;
  text-align:center;

}

.tips{
  font-size: 0.8em;
  display: block;
  color: red;
}

.person-list{
  display: inline-block;
}

.weui-panel:after{
  border-bottom: 0rpx;
}

.weui-media-box__desc{
  font-size: 15px;
}

.auth{
  background-color: white;
  border-top: solid #eee 1px;
}

.one-auth{
  padding-top:5px;
  display: inline-block;
  width: 33%;
  text-align: center;
  vertical-align:top; 
}

.tick-img{
  width: 20px;
  height: 20px;
}

.tick-value{
  font-size: 0.8em;
}

.show-title{
  background-color: white;
  margin-top: 10px;
  margin-bottom: 10px;
  padding-top: 10px;
  padding-left: 15px;
  height: 40px;
  font-size: 0.7em;
}

.bottom-button{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 55px;
  background-color: white;
  color: white;
  border-top:thick #c6c6c6;
}

.bottom-one-control{
  display: inline-block;
}

.home-teach-share{
  width: 40%;
}

.new-join, .add-join{
  width: 30%;
}


.home-teach, .class-share{
  width: 50%;
  text-align: center;
  font-size: 0.5em;
  background-color: white;
}

.bottom-img{
  width: 70px;
  height: 50px;
}

button::after {
  border: 0;
  border-radius: 0;

} 

button[class="btn-share"]{
  background-color:white;
  height: 50px;
}

button[class="btn-share"]::after{
  background-color:white;
  height: 50px;
}

button{
    border-radius: 0;
    background-color:none;
}

.btn-share{
  background-color: white;
  width:20%;
  height:100%;
  text-align: center;
}

.new-btn{
  background-color: rgb(253, 139, 85);
  color: white;
  padding-top: 3px;
}

.add-btn{
  background-color: rgb(242, 68, 77);
  color: white;
  padding-top: 3px;
}